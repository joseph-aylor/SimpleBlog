@model SimpleBlog.Models.Category

@{
    ViewBag.Title = "Details";
}

<div class="row">
    <div class="col-md-5 col-sm-12">
        <h1> @Html.DisplayFor(model => model.Name)</h1>
        <h3> @Html.DisplayFor(model => model.Description)</h3>
    </div>
    <div class="col-md-5 lead top-margin">
            @Html.ActionLink("Back to Categories", "Index")
    </div>
</div>

@Html.Partial("~/Views/Posts/_PostsEmbeddedIndex.cshtml", Model.Posts.OrderByDescending(m => m.DatePosted))